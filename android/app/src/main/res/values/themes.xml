<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasicFitApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/basicfit_orange</item>
        <item name="colorPrimaryDark">@color/basicfit_dark_gray</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/basicfit_orange</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>